@model IEnumerable<Lab2.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container">
    <h2>Quản lý sản phẩm</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <form asp-area="Admin" asp-controller="ProductsManager" asp-action="Index" method="get" class="d-flex">
                <input type="text" name="searchString" class="form-control me-2" placeholder="Tìm kiếm sản phẩm..." value="@ViewBag.SearchString" />
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </form>
        </div>
        <div class="col-md-6 text-end">
            <a asp-area="Admin" asp-controller="ProductsManager" asp-action="Add" class="btn btn-primary">Thêm sản phẩm mới</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Mô tả</th>
                <th>Danh mục</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("N0") đ</td>
                    <td>@product.Description</td>
                    <td>@product.Category?.Name</td>
                    <td>
                        <a asp-area="Admin" asp-controller="ProductsManager" asp-action="Display" asp-route-id="@product.Id" class="btn btn-info btn-sm">Xem</a>
                        <a asp-area="Admin" asp-controller="ProductsManager" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-area="Admin" asp-controller="ProductsManager" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>